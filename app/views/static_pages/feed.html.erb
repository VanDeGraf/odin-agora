<% unless @feed.empty? %>
  <% @feed.each do |feed_item| %>
    <% if feed_item.is_a?(Post) %>
      <%= render "posts/post", post: feed_item, show_author: true %>
    <% elsif feed_item.is_a?(Comment) %>
      <%= render "posts/comment", comment: feed_item, show_parent: true %>
    <% end %>
  <% end %>
<% end %>