<h1>Post creation</h1>
<div class="container">
  <%= simple_form_for @post do |f| %>
    <div class="form-inputs">
      <%= f.input :title,
                  required: true %>
      <%= f.input :body,
                  required: true,
                  as: :text %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Create" %>
    </div>
  <% end %>
</div>