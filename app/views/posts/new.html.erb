<div class="post-container">
  <h2 align="center">Post creation</h2>
  <div class="container">
    <%= simple_form_for @post do |f| %>
      <div class="form-inputs d-flex gap-1" style="flex-direction: column;">
        <%= f.input :title,
                    required: true %>
        <%= f.input :picture,
                    required: false %>
        <%= f.input :body,
                    required: true,
                    as: :text %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Create", class: "btn btn-outline-primary my-2" %>
      </div>
    <% end %>
  </div>
</div>