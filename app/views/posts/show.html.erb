<h1>Post</h1>
title: <%= @post.title %><br>
body: <%= @post.body %><br>
author email: <%= @post.author.email %>, <%= link_to 'profile', user_path(@post.author) %><br>
created_at: <%= @post.created_at %><br>

likes: <%= @post.likes.count %>
<% if @post.author_id != current_user.id %>
  <%= link_to @post.liked?(current_user) ? 'unlike' : 'like', toggle_like_path(@post) %>
<% end %>
<br>

<h3>Comments:</h3>
<% @post.comments.sort_by(&:created_at).reverse.each do |c| %>
  <div class="container border border-secondary">
    author email: <%= c.author.email %>, <%= link_to 'profile', user_path(c.author) %><br>
    body: <%= c.body %><br>
    created_at: <%= c.created_at %><br>
  </div>
<% end %>
<h5>Add comment</h5>
<div class="container">
  <%= simple_form_for @comment, url: create_comment_path(@post) do |f| %>
    <div class="form-inputs">
      <%= f.input :body,
                  required: true,
                  as: :text %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Comment" %>
    </div>
  <% end %>
</div>